def count_sentences_starting_with_b(text):
    sentences = text.split('.')
    count = sum(1 for sentence in sentences if sentence.strip().startswith('B'))
    return count

text = "Bears are large animals. Birds can fly. Butterflies are beautiful."
result = count_sentences_starting_with_b(text)
print(f"Number of sentences starting with 'B': {result}")
